// color
$black: #000;
$white: #fff;
$blue: #051699;
$green: #397E21;

// media
$tab: 992px;
$mobile: 768px;

// fonts
$fontRegular: "Neutraface 2 Text";
$fontLight: "Neutraface 2 Text Light";

.page-container{
  transform: none;
}

.custom-template-custom{
  font-family: $fontRegular;
  padding-bottom: 50px;
  padding-left: 15px;
  padding-right: 15px;
  -webkit-touch-callout: none; /* iOS Safari */
  -webkit-user-select: none;   /* Chrome/Safari/Opera */
  -moz-user-select: none;      /* Firefox */
  -ms-user-select: none;       /* Internet Explorer/Edge */
  user-select: none;           /* Non-prefixed version, currently
                                  not supported by any browser */
  .disabled{
    opacity: .5;
    pointer-events: none;
  }
  h1{
    margin-top: 70px;
    margin-bottom: 70px;
    color: $black;
    font-weight: 500;
    font-size: 32px;
    line-height: 54px;
    @media only screen and (max-width: $mobile) {
      margin-bottom: 30px;
      font-size: 22px;
      line-height: 22px;
    }
  }

  .product-content{
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;

    .product-content-left-side,
    .product-content-right-side{
      width: calc(50% - 16px);
      @media only screen and (max-width: $tab) {
        width: 100%;
      }
    }

      // left side (gallery, accordion)
    .product-content-left-side{
      .product-custom-gallery{
        position: relative;
        margin-bottom: 30px;
        #custom-product-gallery{
          cursor: grab !important;
          &:active{
            cursor: grabbing !important;
          }
          .product-media-slide{
            height: 360px;
            @media only screen and (max-width: $mobile) {
              height: 250px;
            }
            img{
              position: absolute;
              left: 0;
              right: 0;
              object-fit: cover;
              height: 100%;
              width: 100%;
              margin: 0;
            }
          }
        }
        #custom-product-thumbs{
          position: absolute;
          top: 20px;
          left: 20px;
          bottom: 20px;
          height: auto;
          @media only screen and (max-width: $mobile) {
            top: 35px;
            left: 10px;
          }
          .product-thumb-slide {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            position: relative;
            cursor: pointer;
            img {
              width: 100%;
              height: 100%;
              border-radius: 50%;
              position: absolute;
              left: 0;
              top: 0;
              object-fit: cover;
              transition: all .6s;
            }
            &.swiper-slide-thumb-active{
              border: 2px solid $blue;
            }
          }
        }
      }
      .product-custom-accordion{
        @media only screen and (max-width: $tab) {
          display: none;
        }
        .accordion-item{
          margin-bottom: 20px;
        }
        .accordion-heading{
          padding: 18px 10px 17px 30px;
          background: $white;
          box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
          cursor: pointer;
          h3{
            display: flex;
            justify-content: space-between;
            font-weight: 500;
            font-size: 20px;
            line-height: 32px;
            margin: 0;
            color: $blue;
          }
          svg{
            padding: 12px;
            width: 36px;
            height: 30px;
          }
        }
        .accordion-content{
          display: none;
          padding: 10px;
          box-shadow: 0 0 11px 1px #cdcaca54;
          font-family: $fontLight;
          p{
            color: $black;
          }
        }
        .ingredients.accordion-content{
          p{
            display: none;
          }
          p.active{
            display: block;
          }
        }
        .accordion-opened .accordion-content{
          display: block;
        }
      }
    }

    .product-content-right-side{
      .product-tabs{

      }
      .tabs-heading{
        display: flex;
        .tab-item{
          background: $blue;
          color: $white;
          font-size: 17px;
          line-height: 26px;
          padding: 10px 20px;
          cursor: pointer;
          opacity: .3;
          min-width: 190px;
          @media only screen and (max-width: $mobile) {
            min-width: initial;
            flex: auto;
          }
          &[tab-name="summary-tab"]{
            pointer-events: none;
          }
        }
        .tab-item.active{
          opacity: 1;
        }
        .tab-item[tab-name="select-tab"]{
          svg{
            margin-left: 8px;
            margin-bottom: 1px;
            path{
              fill: $white;
            }
            &.arrow-svg{
              transform: rotate(-90deg);
            }
            &.check-svg{
              display: none;
            }
          }
        }
        .tab-item[tab-name="select-tab"]:not(.active){
          background: $blue;
          opacity: 1;
          svg{
            margin-left: 8px;
            margin-bottom: 1px;
            &.arrow-svg{
              display: none;
            }
            &.check-svg{
              display: inline-block;
              margin-bottom: -3px;
            }
          }
        }
      }
      .tabs-content{
        background: $white;
        border: 1px solid $blue;
        box-sizing: border-box;
        padding: 30px;
        @media only screen and (max-width: $mobile) {
          padding: 20px;
        }
        .tab-content-item{
          display: none;
        }
        .tab-content-item.active{
          display: block;
        }

        .products-list{
          display: flex;
          flex-wrap: wrap;
          justify-content: space-between;
          flex-flow: row wrap;
          margin: 20px -12px;
          transition: all .3s;
          &::after {
            content: "";
            flex: auto;
          }
          .product-item{
            width: 25%;
            cursor: pointer;
            margin-bottom: 25px;
            position: relative;
            padding: 0 5px;
            &.active{
              .product-title{
                color: $blue;
              }
              img{
                border: 4px solid $blue;
              }
            }
            .product-title{
              text-transform: uppercase;
              font-size: 15px;
              line-height: 18px;
              margin-top: 10px;
              @media only screen and (max-width: $mobile) {
                font-size: 14px;
              }
            }
            .product-variants{
              position: absolute;
              left: 0;
              right: 0;
              flex-direction: column;
              width: 144px;
              max-width: 100%;
              text-align: center;
              background: $white;
              border: 0.5px solid $blue;
              box-sizing: border-box;
              box-shadow: 0 0 10px rgba(0, 0, 0, 0.08);
              border-radius: 6px;
              font-size: 18px;
              line-height: 24px;
              z-index: 1;
              margin: 0 auto;
              display: none;
             
              .variant-item{
                display: block;
                color: $blue;
                padding: 10px 2px;
                transition: all .3s;
              }
              .variant-item:hover{
                background: rgba(5, 22, 153, 0.06);
              }
            }
            &:hover:not(:focus) .product-variants{
              display: flex;
            }
            .active-variant {
              display: none;
              color: $blue;
              padding: 5px 2px;
              text-align: center;
              background: $white;
              border: 0.5px solid $blue;
              box-shadow: 0 0 10px rgba(0, 0, 0, 0.08);
              border-radius: 6px;
              font-size: 18px;
              line-height: 24px;
              width: 140px;
              max-width: 100%;
              margin: 10px auto -10px;
            }
            &.active .active-variant {
              display: block;
            }
          }
        }
        img.product-item-image{
          display: block;
          width: 90px;
          height: 90px;
          border-radius: 50%;
          margin: 0 auto 12px;
          object-fit: cover;
          @media only screen and (max-width: $mobile) {
            width: 60px;
            height: 60px;
          }
        }

        .selected-product{
          display: flex;
          justify-content: flex-start;
          text-transform: uppercase;
          color: $blue;
          margin-bottom: 20px;
          img.product-item-image{
            margin-right: 20px;
            margin-left: 0;
            margin-bottom: 0;
            width: 60px;
            height: 60px;
            object-fit: cover;
          }
          .active-variant{
            flex: auto;
            text-align: right;
            display: flex;
            flex-direction: column;
            justify-content: center;
          }
        }

        span.per-bottle{
          color: #3a3a3a;
          font-size: 14px;
          display: block;
          line-height: 1;
          text-transform: initial;
        }

        .ro_widget{
          //display: none !important;
        }
        .custom-subscribe-box{
          display: flex;
          flex-wrap: wrap;
          justify-content: space-between;
          margin-top: 20px;
          margin-bottom: 30px;
          .subscribe-plan{
            width: 100%;
            background: $white;
            border: 1px solid $blue;
            box-sizing: border-box;
            padding: 20px 10px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            text-align: center;
            line-height: 1;
            cursor: pointer;
            opacity: .5;
            @media only screen and (max-width: $mobile){
              &.subscribe-single-plan {
                margin-top: 20px;
              }
            }

            &.active{
              opacity: 1;
            }
            .title{
              font-size: 20px;
              line-height: 32px;
              color: $blue;
              text-transform: uppercase;
            }
            .info{
              font-size: 20px;
              line-height: 32px;
              color: $black;
            }
            .price{
              font-size: 60px;
              line-height: 1;
              color: $green;
              display: block;
              margin-top: 2px;
              margin-bottom: 4px;
              span.sub{
                font-size: 14px;
                line-height: 32px;
                color: $black;
                display: block;
              }
            }
            .desc{
              padding: 0 5px;
              font-size: 18px;
              line-height: 20px;
              color: $black;
              font-family: $fontLight;
            }
          }
        }

        .custom-subscribe-box-double{
          display: grid;
          grid-template-columns: 1fr 1fr;
          grid-gap: 24px;
        }

        .btn{
          width: 100%;
          background: $blue;
          color: $white;
          border-radius: 0;
          font-family: $fontLight;
          font-size: 18px;
          line-height: 32px;
          letter-spacing: 2px;
          -webkit-appearance: none;
          -webkit-border-radius: 0;
          outline: none;
        }
        .open-popup-text{
          font-size: 18px;
          line-height: 32px;
          text-decoration: underline;
          color: $blue;
          margin-top: 40px;
          margin-bottom: 10px;
          cursor: pointer;
          @media only screen and (max-width: $mobile) {
            margin-top: 30px;
            margin-bottom: 18px;
          }
        }
        .tab-subtext{
          font-size: 17px;
          line-height: 24px;
          padding: 15px;
          border: 1px solid #C4C4C4;
          @media only screen and (max-width: $mobile) {
            text-align: center;
          }
          p{
            margin: 0;
          }
        }
      }
    }
  }
}


#product-custom-popup{
  position: fixed;
  left: 0;
  top: 0;
  background: rgba(0,0,0,.9);
  z-index: 100;
  width: 100%;
  height: 100%;
  display: none;
  .popup-wrapper{
    display: flex;
    width: 100%;
    height: 100%;
    justify-content: center;
    flex-direction: column;
    align-items: center;
    padding: 20px;
    box-sizing: border-box;

  }
  .popup-content{
    width: 1020px;
    max-width: 100%;
    height: 560px;
    max-height: 100%;
    background: $white;
    position: relative;
    .close{
      position: absolute;
      right: 0;
      top: -30px;
      cursor: pointer;
      svg{
        fill: $white;
      }
    }
    @media only screen and (max-width: $tab) {
      .close{
        top: 10px;
        right: 10px;
        svg{
          fill: $black;
        }
      }
    }
  }
}

